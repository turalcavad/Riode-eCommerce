@model Riode.Data.Entities.Category

@{
	ViewData["Title"] = "Edit";
}

<div class="page-header">
	<div class="row align-items-end">
		<div class="col-lg-8">
			<div class="page-header-title">
				<div class="d-inline">
					<h4>Product Colors</h4>

				</div>
			</div>
		</div>

	</div>
</div>

<div class="page-body">
	<div class="row">
		<div class="col-sm-12">
			<!-- Basic Form Inputs card start -->
			<div class="card">

				<div class="card-block">
					<h4 class="sub-title">Basic Inputs</h4>
					<form method="post">

						<div class="form-group row">
							<label class="col-sm-2 col-form-label">
								Name
							</label>
							<div class="col-sm-10">
								<input asp-for="Name" class="form-control">
								<span asp-validation-for="Name" class="col-form-label">
								</span>
							</div>
						</div>

						<div class="form-group row">
							<label class="col-sm-2 col-form-label">
								Parent
							</label>
							<div class="col-sm-10">
								<select class="select2 form-control" asp-for="ParentId" asp-items="@ViewBag.Categories">
								</select>
								<span asp-validation-for="ParentId" class="col-form-label">
								</span>
							</div>
						</div>

						<div class="form-group col-12">
							<input type="hidden" asp-for="Id" />
							<button type="submit" class="btn btn-success">Save changes</button>
							<a asp-action="index" class="btn btn-inverse">Back to List</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


@section css{
	
	<link href="~/admin/assets/libs/select2/css/select2.css" rel="stylesheet" />
	<link href="~/admin/assets/libs/select2/css/select2-override.css" rel="stylesheet" />
}

@section js{

	<script src="~/admin/assets/libs/select2/js/select2.min.js"></script>
	<script>
		$(document).ready(function () {
			$(".select2").select2();
		})
	</script>

}