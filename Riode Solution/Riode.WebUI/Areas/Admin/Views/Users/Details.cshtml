@model RiodeUser
@{
	ViewData["Title"] = "Details";
}


<h1>Details</h1>
<div class="page-body">
	<div class="row">
		<div class="col-sm-12">
			<!-- Basic Form Inputs card start -->
			<div class="card">

				<div class="card-block">
					<h4 class="sub-title">User</h4>

					<div class="form-group row">
						<label class="col-sm-2 col-form-label">
							Name
						</label>
						<div class="col-sm-10">
							<p asp-for="Name" class="form-control">@Model.Name</p>
							<span asp-validation-for="Name" class="col-form-label">
							</span>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 col-form-label">
							Surname
						</label>
						<div class="col-sm-10">
							<p asp-for="Surname" class="form-control">@Model.Surname</p>
							<span asp-validation-for="Name" class="col-form-label">
							</span>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 col-form-label">
							Username
						</label>
						<div class="col-sm-10">
							<p asp-for="UserName" class="form-control">@Model.UserName</p>
							<span asp-validation-for="Name" class="col-form-label">
							</span>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-sm-2 col-form-label">
							Email
						</label>
						<div class="col-sm-10">
							<p asp-for="Email" class="form-control">@Model.Email</p>
							<span asp-validation-for="Name" class="col-form-label">
							</span>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-12">
							<div class="tab-control" role="tabcontrol">
								<div class="tab-page" id="specifications" aria-title="Roles" selected>
									<table class="table table-striped">
										<thead>
											<tr>
												<th style="max-width:100px">
												</th>
												<th>
													Name
												</th>
											</tr>
										</thead>

										<tbody>
											@foreach (Tuple<int,string,bool> item in ViewBag.Roles)
											{
												<tr>
													<td class="table-row-select">
														<input type="checkbox"
															   @(item.Item3 ? "checked" : "disabled")
															   data-role-id="@item.Item1"
															   data-role-name="@item.Item2"/>
													</td>
													<th>
														@item.Item2
													</th>
												</tr>
										}
											</tbody>
										</table>
									</div>
								<div class="tab-page" id="claims" aria-title="Claims">
									<table class="table table-striped">
										<thead>
											<tr>
												<th style="max-width:100px">
												</th>
												<th>
													Name
												</th>
											</tr>
										</thead>

										<tbody>
											@foreach (Tuple<string, bool> item in ViewBag.Claims)
											{
												<tr>
													<td class="table-row-select">
														<input type="checkbox"
															   @(item.Item2 ? "checked" : "disabled")
															   data-claim-name="@item.Item1" />
													</td>
													<th>
														@item.Item1
													</th>
												</tr>
											}
										</tbody>
									</table>
								</div>
								</div>
							</div>
						</div>

						<div class="form-group row">
							<div class="col-12">

								@if (User.HasAccess("admin.users.edit"))
								{
									<a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
								}
								<a asp-action="index" class="btn btn-inverse">Back to List</a>

							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

	@section css{
		<link href="~/admin/assets/libs/tab-control/tab-control.css" rel="stylesheet" />

	}
	@section js{


		<script src="~/admin/assets/libs/tab-control/tab-control.js"></script>
	}

